<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculatorContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="edu.blackburn.programmercalculator.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:id="@+id/textfield_input1"
            android:layout_width="287dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black"
            android:ems="10"
            android:fontFamily="monospace"
            android:inputType="number"
            android:labelFor="@id/textfield_input1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="27dp" />

        <EditText
            android:id="@+id/textfield_input2"
            android:layout_width="287dp"
            android:layout_height="54dp"
            android:layout_alignEnd="@+id/textfield_input1"
            android:layout_alignStart="@+id/textfield_input1"
            android:layout_below="@+id/textfield_input1"
            android:layout_marginTop="20dp"
            android:background="@android:color/black"
            android:ems="10"
            android:fontFamily="monospace"
            android:inputType="number"
            android:labelFor="@id/textfield_input2"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:id="@+id/textfield_operationSelected"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/textfield_input2"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/textfield_input2"
            android:background="@android:color/background_dark"
            android:fontFamily="monospace"
            android:labelFor="@id/textfield_operationSelected"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="118dp" />

        <EditText
            android:id="@+id/textfield_output"
            android:layout_width="347dp"
            android:layout_height="53dp"
            android:layout_alignEnd="@+id/textfield_input2"
            android:layout_below="@+id/textfield_input2"
            android:layout_marginTop="18dp"
            android:background="@android:color/black"
            android:ems="10"
            android:fontFamily="monospace"
            android:inputType="number"
            android:labelFor="@id/textfield_output"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="181dp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/textfield_output"
            android:layout_below="@+id/textfield_output"
            android:layout_marginTop="28dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:onClick="onAddButtonPress"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="265dp" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/button_add"
            android:layout_alignTop="@+id/button_add"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/button_add"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="monospace"
            android:onClick="onSubButtonPress"
            android:text="@string/sub"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="265dp" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/button_sub"
            android:layout_alignTop="@+id/button_sub"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_sub"
            android:background="@android:color/holo_green_dark"
            android:fontFamily="monospace"
            android:onClick="onMulButtonPress"
            android:text="@string/mul"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="199dp"
            tools:layout_editor_absoluteY="265dp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/button_mul"
            android:layout_alignEnd="@+id/textfield_output"
            android:layout_alignTop="@+id/button_mul"
            android:background="@android:color/holo_orange_dark"
            android:fontFamily="monospace"
            android:onClick="onDivButtonPress"
            android:text="@string/div"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="265dp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@color/colorPrimary"
            android:fontFamily="monospace"
            android:onClick="onEqualButtonPress"
            android:text="@string/equal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="382dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
